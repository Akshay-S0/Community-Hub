<!-- Noticeboard -->
<%- include('partials/header') %>

<div style="padding:4%; padding-top: 0%; font-family:sans-serif; font-size:14px;">
  <div class="page-heading">
    <span>Noticeboard</span>
  </div>
  <div class="container container-profile">
    <% if(isAdmin){ %>
      <row>
        <col-4>
            <a href="/notice" class="btn btn-pastel-primary btn-modern text-center d-block mx-auto" style="max-width: 200px; border-radius: 2rem;">
              <i class="fas fa-plus me-2"></i>CREATE NOTICE
            </a>
        </col-4>
      </row>
      <% } %>
    <div class="row">
      <% notices.reverse().forEach(function(notice){ %>
      <div class="col">
        <div class="card card-profile my-5" style="margin-top: 10px;">
          <div class="card-body" style="padding:3% 8% 3%;">
            <div>
              <i class="fas fa-paperclip"></i></i> <b><%= notice.subject %></b>
              <p style="padding-left: 20px; color: grey;">
                <%= notice.date %> - Published by admin
              </p>
              <p style="padding-left: 20px"><%= notice.details %></p>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>    
  </div>
</div>
<%- include('partials/footer') %>