<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sign Up - Community Hub</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <meta name="description" content="Join Community Hub">
  <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="styles.css">
</head>

<body class="modern-form-page">
  <div class="form-container">
    <div class="container-fluid h-100">
      <div class="row h-100">
        <div class="col-lg-6 d-none d-lg-block form-left">
          <div class="branding-section">
            <div class="branding-content">
              <div class="brand-logo">
                <img src="images/diversity.png" alt="Community Hub" class="logo-img">
                <h1>Community Hub</h1>
              </div>
              <h2>Join Your Community!</h2>
              <p>Create your account and start managing your housing society with ease.</p>
              <div class="feature-list">
                <div class="feature-item">
                  <i class="fas fa-check-circle"></i>
                  <span>Easy Setup</span>
                </div>
                <div class="feature-item">
                  <i class="fas fa-check-circle"></i>
                  <span>Secure Platform</span>
                </div>
                <div class="feature-item">
                  <i class="fas fa-check-circle"></i>
                  <span>Community Management</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-lg-6 form-right">
          <div class="form-wrapper">
            <div class="form-header">
              <h2>Create Account</h2>
              <p>Fill in your details to join your community</p>
            </div>
            
            <form class="modern-form" action="/signup" method="POST">
              <!-- Flash Messages -->
              <% if (errorMessage && errorMessage.length > 0) { %>
                <div class="flash-message error">
                  <i class="fas fa-exclamation-circle"></i>
                  <%= errorMessage %>
                </div>
              <% } %>
              
              <% if (successMessage && successMessage.length > 0) { %>
                <div class="flash-message success">
                  <i class="fas fa-check-circle"></i>
                  <%= successMessage %>
                </div>
              <% } %>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="firstName" class="form-label">
                      <i class="fas fa-user me-2"></i>First Name
                    </label>
                    <input name="firstName" type="text" id="firstName" class="form-control" 
                           placeholder="Enter first name" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="lastName" class="form-label">
                      <i class="fas fa-user me-2"></i>Last Name
                    </label>
                    <input name="lastName" type="text" id="lastName" class="form-control" 
                           placeholder="Enter last name" required>
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <label for="phoneNumber" class="form-label">
                  <i class="fas fa-phone me-2"></i>Phone Number
                </label>
                <input name="phoneNumber" type="tel" id="phoneNumber" class="form-control" 
                       placeholder="Enter phone number" required>
              </div>
              
              <div class="form-group">
                <label for="societyName" class="form-label">
                  <i class="fas fa-building me-2"></i>Society Name
                </label>
                <input name="societyName" list="societyList" id="societyName" class="form-control" 
                       placeholder="Select your society" autocomplete="off" required>
                <datalist id="societyList">
                  <% societies.forEach(society => { %>
                    <option value="<%= society.societyName %>">
                  <% }) %>
                </datalist>
              </div>
              
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="flatNumber" class="form-label">
                      <i class="fas fa-door-open me-2"></i>Flat Number
                    </label>
                    <input name="flatNumber" type="text" id="flatNumber" class="form-control" 
                           placeholder="e.g., A-101" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="squareFeet" class="form-label">
                      <i class="fas fa-ruler-combined me-2"></i>Area (sq ft)
                    </label>
                    <input name="squareFeet" type="number" id="squareFeet" class="form-control" 
                           placeholder="House area" required>
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <label for="email" class="form-label">
                  <i class="fas fa-envelope me-2"></i>Email Address
                </label>
                <input name="username" type="email" id="email" class="form-control" 
                       placeholder="Enter your email" required>
              </div>
              
              <div class="form-group">
                <label for="password" class="form-label">
                  <i class="fas fa-lock me-2"></i>Password
                </label>
                <input name="password" type="password" id="password" class="form-control" 
                       placeholder="Create a password" required>
              </div>
              
              <button type="submit" class="btn btn-primary btn-modern w-100 mb-4">
                <i class="fas fa-user-plus me-2"></i>Create Account
              </button>
              
              <div class="divider">
                <span>Already have an account?</span>
              </div>
              
              <div class="form-actions d-flex flex-column gap-3">
                <a href="/login" class="btn btn-outline-primary btn-modern w-100">
                  <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
                <a href="/" class="btn btn-light btn-modern w-100">
                  <i class="fas fa-home me-2"></i>Back to Home
                </a>
                <!-- Theme and settings link -->
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showThemeOptions() {
      alert('Theme Options:\n• Pastel Colors: Enabled\n• Favicon: Community Hub Icon\n• Responsive Design: Yes');
    }
  </script>
</body>
</html>
