<%- include('partials/header') %>

<div class="page-container" style="padding: 2rem 0;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="content-card">
          <div class="card-header text-center">
            <div class="card-title d-flex align-items-center justify-content-center">
              <i class="fas fa-bullhorn me-2" style="color: #3b82f6;"></i>
              <span>Create New Notice</span>
            </div>
            <p class="card-description mb-0">Share important announcements with your community</p>
          </div>
          
          <form action="/notice" method="POST" class="modern-form">
            <!-- Subject Field -->
            <div class="form-group mb-4">
              <label class="form-label" for="subject">
                <i class="fas fa-heading me-2"></i>Subject
              </label>
              <input name="subject" id="subject" class="form-control modern-input" type="text" 
                     placeholder="Enter notice subject..." required>
              <small class="form-text text-muted mt-1">
                <i class="fas fa-info-circle me-1"></i>Keep it clear and concise
              </small>
            </div>
            
            <!-- Details Field -->
            <div class="form-group mb-4">
              <label class="form-label" for="details">
                <i class="fas fa-file-alt me-2"></i>Details
              </label>
              <textarea name="details" id="details" class="form-control modern-input" rows="8" 
                        placeholder="Provide detailed information about the notice..." required></textarea>
              <small class="form-text text-muted mt-1">
                <i class="fas fa-info-circle me-1"></i>Include all relevant information residents need to know
              </small>
            </div>
            
            <!-- Action Buttons -->
            <div class="d-flex gap-3 justify-content-end">
              <a href="/noticeboard" class="btn btn-modern-secondary">
                <i class="fas fa-times me-1"></i>Cancel
              </a>
              <button type="submit" class="btn btn-modern-primary" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                <i class="fas fa-paper-plane me-1"></i>Publish Notice
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>