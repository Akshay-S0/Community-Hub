<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login - Community Hub</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <meta name="description" content="Login to Community Hub">
  <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Custom Styles -->
  <link rel="stylesheet" href="styles.css">
</head>

<body class="modern-form-page">
  <!-- Modern Login Form -->
  <div class="form-container">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <!-- Login Form -->
        <div class="col-md-8 col-lg-6 col-xl-5">
          <div class="form-wrapper">
            <div class="text-center mb-4">
              <img src="images/diversity.png" alt="Community Hub" class="logo-img" style="width: 80px; height: 80px;">
              <h1 class="brand-title">Community Hub</h1>
            </div>
            <div class="form-header">
              <h2>Sign In</h2>
              <p>Enter your credentials to access your account</p>
            </div>
            
            <form class="modern-form" action="/login" method="POST">
              <!-- Flash Messages -->
              <% if (errorMessage && errorMessage.length > 0) { %>
                <div class="flash-message error">
                  <i class="fas fa-exclamation-circle"></i>
                  <%= errorMessage %>
                </div>
              <% } %>
              
              <% if (successMessage && successMessage.length > 0) { %>
                <div class="flash-message success">
                  <i class="fas fa-check-circle"></i>
                  <%= successMessage %>
                </div>
              <% } %>

              <div class="form-group">
                <label for="email" class="form-label">
                  <i class="fas fa-envelope me-2"></i>Email Address
                </label>
                <input name="username" type="email" id="email" class="form-control" 
                       placeholder="Enter your email" required>
              </div>
              
              <div class="form-group">
                <label for="password" class="form-label">
                  <i class="fas fa-lock me-2"></i>Password
                </label>
                <input name="password" type="password" id="password" class="form-control" 
                       placeholder="Enter your password" required>
                <div class="password-helper mt-2">
                  <a href="#" class="forgot-password-link" onclick="showForgotPasswordAlert()">
                    <i class="fas fa-key me-1"></i>Forgot Password?
                  </a>
                </div>
              </div>
              
              <button type="submit" class="btn btn-pastel-primary btn-modern w-100 mb-4">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
              </button>
              
              <div class="divider">
                <span>New to Community Hub?</span>
              </div>
              
              <div class="form-actions d-flex flex-column gap-3">
                <a href="/signup" class="btn btn-pastel-primary btn-modern w-100 fw-bold">
                  <i class="fas fa-user-plus me-2"></i>Create Account
                </a>
                <a href="/" class="btn btn-light btn-modern w-100 fw-bold">
                  <i class="fas fa-home me-2"></i>Back to Home
                </a>
                <!-- Theme and settings link -->
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showForgotPasswordAlert() {
      alert('Forgot Password?\n\nPlease contact your society administrator or send an email to support@communityhub.com to reset your password.');
    }
    
    function showThemeOptions() {
      alert('Theme Options:\n• Pastel Colors: Enabled\n• Favicon: Community Hub Icon\n• Responsive Design: Yes');
    }
  </script>
</body>
</html>
