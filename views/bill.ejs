            </tr>
          </thead>
          <tbody>
        <% societyResidents.forEach(function(residentItem) { 
            function monthDiff(dateFrom, dateTo) {
              return dateTo.getMonth() - dateFrom.getMonth() + (12 * (dateTo.getFullYear() - dateFrom.getFullYear()));
            }
            const dateToday = new Date();
            let totalMonth = 0;
            let dateFrom = new Date(residentItem.createdAt);
            if(residentItem.lastPayment && residentItem.lastPayment.date){
              dateFrom = new Date(residentItem.lastPayment.date);
              totalMonth = monthDiff(dateFrom, dateToday);
            } else {
              totalMonth = monthDiff(dateFrom, dateToday) + 1;
            }
            let credit = 0;
            let due = 0;
            const residentSquareFeetCharges = residentItem.squareFeet * society.maintenanceBill.squareFeetRate;
            const residentBaseMonthlyTotal = society.maintenanceBill.societyCharges + society.maintenanceBill.repairsAndMaintenance + society.maintenanceBill.sinkingFund + society.maintenanceBill.waterCharges + society.maintenanceBill.insuranceCharges + society.maintenanceBill.parkingCharges;
            const residentMonthlyTotal = residentBaseMonthlyTotal + residentSquareFeetCharges;
            if(totalMonth==0) {
              credit = residentMonthlyTotal;
            } else if(totalMonth>1) {
              due =  (totalMonth-1)*residentMonthlyTotal;
            }
            const totalAmount = residentMonthlyTotal + due - credit;
        %>
            <tr>
              <td><%= residentItem.firstName %> <%= residentItem.lastName %></td>
              <td><%= residentItem.flatNumber %></td>
              <td class="text-center">
                <% if(totalAmount==0){ %>
                  <i class="fas fa-circle text-success" title="Paid"></i>
                <% } else { %>
                  <i class="fas fa-circle text-danger" title="Due"></i>
                <% } %>
              </td>
              <td class="text-end"><%= totalAmount %></td>
            </tr>
        <% }) %>
          </tbody>
        </table>
