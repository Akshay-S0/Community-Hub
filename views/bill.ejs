<script type="text/javascript">
  // Check if publishableKey exists
  <% if(typeof publishableKey !== 'undefined' && publishableKey) { %>
    // Create an instance of the Stripe object with your publishable API key
    var stripe = Stripe("<%= publishableKey %>");
    var checkoutButton = document.getElementById("checkout-button");
    var statusDiv = document.getElementById("payment-status");
    var statusMessage = document.getElementById("status-message");

    function showStatus(message, type) {
      statusMessage.textContent = message;
      statusMessage.className = `alert modern-alert modern-alert-${type}`;
      statusDiv.style.display = 'block';
      setTimeout(() => {
        statusDiv.style.display = 'none';
      }, 5000);
    }

    if (checkoutButton) {
      checkoutButton.addEventListener("click", function () {
        if (checkoutButton.disabled) {
          showStatus('No amount due for payment.', 'info');
          return;
        }

        // Show loading state
        checkoutButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
        checkoutButton.disabled = true;

        fetch("/checkout-session", {
          method: "POST",
          headers: {
            'Content-Type': 'application/json',
          },
        })
        .then(function (response) {
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          return response.json();
        })
        .then(function (session) {
          if (session.error) {
            throw new Error(session.error);
          }
          return stripe.redirectToCheckout({ sessionId: session.id });
        })
        .then(function (result) {
          if (result && result.error) {
            throw new Error(result.error.message);
          }
        })
        .catch(function (error) {
          console.error("Payment Error:", error);
          showStatus(`Payment failed: ${error.message}. Please check your Stripe configuration or try again.`, 'error');
          
          // Reset button
          checkoutButton.innerHTML = '<i class="fas fa-credit-card me-2"></i>Pay ₹<%= totalAmount %>';
          checkoutButton.disabled = false;
        });
      });
    }
  <% } else { %>
    // Handle missing Stripe configuration
    var checkoutButton = document.getElementById("checkout-button");
    var statusDiv = document.getElementById("payment-status");
    var statusMessage = document.getElementById("status-message");
    
    if (checkoutButton) {
      checkoutButton.addEventListener("click", function () {
        statusMessage.textContent = 'Payment system not configured. Please contact administrator to set up Stripe payment gateway.';
        statusMessage.className = 'alert modern-alert modern-alert-warning';
        statusDiv.style.display = 'block';
      });
    }
  <% } %>
</script>

