<!-- Maintenance Bill + Payment + Admin accounting section -->
<%- include('partials/header') %>
<style>
  /* Cohesive Dark Theme */
  body {
    background-image: none;
    /* Page header background: rgba(30, 41, 59, 0.9) - making body slightly darker */
    background-color: #1a202c !important; /* Darker shade of the page header color */
    color: #f0f0f0 !important; /* Off-white text for good readability */
  }
  
  /* Enhanced card contrast for darker body background */
  .content-card {
    background: rgba(30, 41, 59, 0.95) !important; /* Slightly more opaque to stand out */
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4) !important; /* Stronger shadow for depth */
  }
  
  .page-header {
    background: rgba(30, 41, 59, 0.95) !important; /* Slightly more opaque to stand out */
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4) !important; /* Stronger shadow for depth */
  }
  
  /* Ensure all text elements use consistent colors */
  .content-card, .page-header {
    color: #f0f0f0 !important;
  }
  
