    </div>

    <% if(receipt.invoice){ %>
    <!-- Receipt Section -->
    <div class="content-card mt-4">
      <div class="card-header">
        <h3 class="card-title">
          <i class="fas fa-receipt me-2 text-success"></i>Payment Receipt
        </h3>
        <p class="card-description">Download your payment receipt</p>
      </div>
      
      <div class="text-center mb-3">
        <button id="download-receipt" class="btn btn-modern-info">
          <i class="fas fa-download me-2"></i>Download Receipt
        </button>
      </div>
  <div id="receipt" style="background-color: rgba(128, 128, 128, 0.048); max-width: 1000px; margin: auto;">
    <table class="bill-header" style="border: 1px solid #ddd; border-bottom: none;">
      <tr>
        <td>
          <p style="padding-top:10px"><%= society.societyName %></p>
          <p><%= society.societyAddress.address %>, <%= society.societyAddress.city %>, 
            <%= society.societyAddress.district %>-<%= society.societyAddress.postalCode %>
          </p>
        </td>
      </tr>
    </table>
    <% let [month, date, year1]    = new Date(receipt.date).toLocaleDateString().split("/") %>
    <% let receiptMonth = new Date(receipt.date).toLocaleString("default", { month: "long" }) %>
    <div id="receipt" style="display: flex; justify-content: center; border: 1px solid #ddd; border-bottom: none;  max-width: 1000px; margin: auto;">
      <p style="padding: 20px 0 10px"><b>Receipt</b></p>
    </div>
    <div style="padding: 0 20px 10px; display: flex; justify-content: space-between; border: 1px solid #ddd; border-top: none; border-bottom: none;  max-width: 1000px; margin: auto;">
      <p>Receipt: <b><%= receipt.invoice %></b></p>
      <p>For: <b><%= receiptMonth %>, <%= year1 %></b></p>
      <p>Date: <b><%= date %>/<%= month %>/<%= year1 %></b></p>
    </div>
    <div  style="padding: 0 20px; display: flex; justify-content: space-between; border: 1px solid #ddd; border-top: none; border-bottom: none;  max-width: 1000px; margin: auto;">
      <p>Received with thanks from <%= resident.flatNumber %> - <%= resident.firstName %> <%= resident.lastName %>, 
        the sum of rupees <span style="color: white;" id="words"></span> on <%= date %> <%= receiptMonth %>, <%= year1 %>.
      </p>
    </div>
    <div style="padding: 20px 20px 10px; display: flex; justify-content: space-between; flex-direction: column; border: 1px solid #ddd; border-bottom: none; border-top: none;  max-width: 1000px; margin: auto;">
      <p><b>Remark:</b></p>
      <p>Being amount received from member towards maintenance charges for the month of <%= receiptMonth %>, <%= year1 %>.</p>
    </div>
    <input id="number" type="text" style="display: none;" value="<%= receipt.amount %>" />
    <div style="padding: 20px 20px; display: flex; justify-content: space-between; border: 1px solid #ddd; border-top: none;  max-width: 1000px; margin: auto;">
      <p>₹<b><%= receipt.amount %></b></p>
      <div style="display: flex; justify-content: space-between; flex-direction: column">
        <p>For <%= society.societyName %></p>
        <br>
        <p>Secretary/Treasurer</p>
      </div>
      </div>
    </div>
    <% } %>

    <% if(resident.isAdmin){ %>
    <!-- Admin Accounting Section -->
    <div class="content-card mt-4">
      <div class="card-header">
        <h3 class="card-title">
          <i class="fas fa-chart-line me-2 text-success"></i>Accounting Overview
        </h3>
        <p class="card-description">Payment status overview for all residents</p>
      </div>
      
      <div class="table-responsive">
        <table class="table table-dark table-hover modern-table">
          <thead class="table-primary">
            <tr>
              <th>Resident</th>
              <th>Flat</th>
              <th class="text-center">Status</th>
              <th class="text-end">Due (₹)</th>
            </tr>
          </thead>
          <tbody>
        <% societyResidents.forEach((resident) => { %>
          <!-- Calculate resident payment status start -->
          <% function monthDiff(dateFrom, dateTo) { %>
            <% return dateTo.getMonth() - dateFrom.getMonth() + (12 * (dateTo.getFullYear() - dateFrom.getFullYear())) %>
          <% } %>
          <% const dateToday = new Date(); %>
          <% let totalMonth = 0  %>
          <% let dateFrom = resident.createdAt; %>
          <% if(resident.lastPayment.date){ %>
						<% dateFrom = resident.lastPayment.date; %>
						<% totalMonth = monthDiff(dateFrom,dateToday) %>
					<% } else { %>
						<% totalMonth = monthDiff(dateFrom,dateToday) + 1 %>
					<% } %>
          <% let credit = 0; %>
					<% let due = 0; %>
					<% const residentSquareFeetCharges = resident.squareFeet * society.maintenanceBill.squareFeetRate; %>
					<% const residentBaseMonthlyTotal = society.maintenanceBill.societyCharges + society.maintenanceBill.repairsAndMaintenance + society.maintenanceBill.sinkingFund + society.maintenanceBill.waterCharges + society.maintenanceBill.insuranceCharges + society.maintenanceBill.parkingCharges; %>
					<% const residentMonthlyTotal = residentBaseMonthlyTotal + residentSquareFeetCharges; %>
					<% if(totalMonth==0) { %>
						<% credit = residentMonthlyTotal; %>
					<% } else if(totalMonth>1) { %>
						<% due =  (totalMonth-1)*residentMonthlyTotal %>
					<% } %>
					<% const totalAmount = residentMonthlyTotal + due - credit %>
          <!-- Calculate resident payment status end-->

            <tr>
              <td><%= resident.firstName %> <%= resident.lastName %></td>
              <td><%= resident.flatNumber %></td>
              <td class="text-center">
                <% if(totalAmount==0){ %>
                  <i class="fas fa-circle text-success" title="Paid"></i>
                <% } else { %>
                  <i class="fas fa-circle text-danger" title="Due"></i>
                <% } %>
              </td>
              <td class="text-end"><%= totalAmount %></td>
            </tr>
          <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>
    </div>
  </div><!-- /.container -->
</div><!-- /.page-container -->

<script type="text/javascript">
  // Check if publishableKey exists
  <% if(typeof publishableKey !== 'undefined' && publishableKey) { %>
    // Create an instance of the Stripe object with your publishable API key
    var stripe = Stripe("<%= publishableKey %>");
    var checkoutButton = document.getElementById("checkout-button");
    var statusDiv = document.getElementById("payment-status");
    var statusMessage = document.getElementById("status-message");

    function showStatus(message, type) {
      statusMessage.textContent = message;
      statusMessage.className = `alert modern-alert modern-alert-${type}`;
      statusDiv.style.display = 'block';
      setTimeout(() => {
        statusDiv.style.display = 'none';
      }, 5000);
    }

    checkoutButton.addEventListener("click", function () {
      if (checkoutButton.disabled) {
        showStatus('No amount due for payment.', 'info');
        return;
      }

      // Show loading state
      checkoutButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
      checkoutButton.disabled = true;

      fetch("/checkout-session", {
        method: "POST",
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(function (response) {
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
      })
      .then(function (session) {
        if (session.error) {
          throw new Error(session.error);
        }
        return stripe.redirectToCheckout({ sessionId: session.id });
      })
      .then(function (result) {
        if (result && result.error) {
          throw new Error(result.error.message);
        }
      })
      .catch(function (error) {
        console.error("Payment Error:", error);
        showStatus(`Payment failed: ${error.message}. Please check your Stripe configuration or try again.`, 'error');
        
        // Reset button
        checkoutButton.innerHTML = '<i class="fas fa-credit-card me-2"></i>Pay ₹<%= totalAmount %>';
        checkoutButton.disabled = false;
      });
    });
  <% } else { %>
    // Handle missing Stripe configuration
    var checkoutButton = document.getElementById("checkout-button");
    var statusDiv = document.getElementById("payment-status");
    var statusMessage = document.getElementById("status-message");
    
    if (checkoutButton) {
      checkoutButton.addEventListener("click", function () {
        statusMessage.textContent = 'Payment system not configured. Please contact administrator to set up Stripe payment gateway.';
        statusMessage.className = 'alert modern-alert modern-alert-warning';
        statusDiv.style.display = 'block';
      });
    }
  <% } %>
</script>

<script>
  var a = ['','one ','two ','three ','four ', 'five ','six ','seven ','eight ','nine ','ten ','eleven ','twelve ','thirteen ','fourteen ','fifteen ','sixteen ','seventeen ','eighteen ','nineteen '];
  var b = ['', '', 'twenty','thirty','forty','fifty', 'sixty','seventy','eighty','ninety'];
  function inWords (num) {
      if ((num = num.toString()).length > 9) return 'overflow';
      n = ('000000000' + num).substr(-9).match(/^(\d{2})(\d{2})(\d{2})(\d{1})(\d{2})$/);
      if (!n) return; var str = '';
      str += (n[1] != 0) ? (a[Number(n[1])] || b[n[1][0]] + ' ' + a[n[1][1]]) + 'crore ' : '';
      str += (n[2] != 0) ? (a[Number(n[2])] || b[n[2][0]] + ' ' + a[n[2][1]]) + 'lakh ' : '';
      str += (n[3] != 0) ? (a[Number(n[3])] || b[n[3][0]] + ' ' + a[n[3][1]]) + 'thousand ' : '';
      str += (n[4] != 0) ? (a[Number(n[4])] || b[n[4][0]] + ' ' + a[n[4][1]]) + 'hundred ' : '';
      str += (n[5] != 0) ? ((str != '') ? 'and ' : '') + (a[Number(n[5])] || b[n[5][0]] + ' ' + a[n[5][1]]) + 'only ' : '';
      return str;
  }
  document.getElementById('words').innerHTML = inWords(document.getElementById('number').value);
</script>

