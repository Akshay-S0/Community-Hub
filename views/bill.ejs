  .page-header h1, .page-header h2, .page-header h3, .page-header h4, .page-header h5, .page-header h6 {
    color: #f1f5f9 !important; /* Bright white for headings */
  }
  
  .content-card p, .page-header p, .card-description {
    color: #cbd5e1 !important; /* Light gray for descriptions */
  }
  
  /* Bill info grid styling */
  .bill-info-grid {
    margin-bottom: 2rem;
  }
  
  .info-item {
    background: rgba(51, 65, 85, 0.3);
    padding: 1rem;
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 255, 255, 0.1);
    height: 100%;
  }
  
  .info-item label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #cbd5e1;
    margin-bottom: 0.25rem;
  }
  
  .info-item .value {
    font-size: 1rem;
    font-weight: 600;
    color: #f1f5f9;
  }
  
  /* Override Bootstrap table styling for dark theme consistency */
  .modern-table {
    background-color: transparent !important;
  }
  
  .modern-table .table-primary {
    background-color: var(--primary-color) !important;
    border-color: var(--primary-dark) !important;
  }
  
  .modern-table .table-info {
    background-color: var(--secondary-color) !important;
    border-color: #0891b2 !important;
  }
  
  .modern-table thead th {
    color: white !important;
    border-bottom: 2px solid rgba(255, 255, 255, 0.2) !important;
  }
  
  .modern-table tbody td {
    border-color: rgba(255, 255, 255, 0.1) !important;
    background-color: transparent !important;
  }
  
  .modern-table tbody tr:hover {
    background-color: rgba(99, 102, 241, 0.1) !important;
  }
  
  .modern-table tfoot td {
    background-color: rgba(6, 182, 212, 0.9) !important;
    color: white !important;
    font-weight: 600;
    border-top: 2px solid rgba(255, 255, 255, 0.2) !important;
  }
  
  @media print {
    .btn, button {
      display: none !important;
    }
    .advertisement {
      display: none !important;
    }
    #navbar {
      display: none !important;
    }
    body {
      font-size: 12px;
      background: white !important;
    }
    .bill-content, .bill-header, .bill-info-section {
      font-size: 11px;
      background: white !important;
      color: black !important;
    }
    .bill-content td, .bill-content th {
      padding: 4px;
      color: black !important;
    }
  }
</style>
<!-- Bill Page Container -->
<div class="page-container">
  <div class="container">
    <div style="padding:4%; padding-top: 0%; font-family:sans-serif; font-size:14px;">
      <div class="page-heading">
        <span>Maintenance Bill</span>
      </div>
    
      <div class="container container-profile">
        <row>
          <col-4>
            <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
              <button id="download-btn" class="btn btn-pastel-info btn-modern">
                <i class="fas fa-download me-2"></i>Download Bill
              </button>
              <button 
                <% if(totalAmount==0){ %> 
                  disabled title="No amount due" 
                <% } %>
                id="checkout-button" class="btn btn-pastel-success btn-modern <% if(totalAmount==0){ %>disabled<% } %>">
                <i class="fas fa-credit-card me-2"></i>
                <% if(totalAmount==0){ %>Paid<% } else { %>Pay ₹<%= totalAmount %><% } %>
              </button>     
              <% if(resident.isAdmin){ %>
              <a href="/editBill" class="btn btn-pastel-warning btn-modern">
                <i class="fas fa-edit me-2"></i>Edit Bill
              </a>   
              <% } %>
            </div>
          </col-4>
        </row>
  
    <!-- Payment Status Alert -->
    <div id="payment-status" class="mb-3" style="display: none;">
      <div class="alert" role="alert" id="status-message"></div>
    </div>
    
    <!-- Bill Details -->
    <div class="content-card" id="print-content">
      <div class="card-header">
        <h3 class="card-title">
          <i class="fas fa-building me-2 text-primary"></i><%= society.societyName %>
        </h3>
        <p class="card-description"><%= society.societyAddress.address %>, <%= society.societyAddress.city %>, <%= society.societyAddress.district %>-<%= society.societyAddress.postalCode %></p>
      </div>
      
      <div class="bill-info-grid mb-4">
        <div class="row g-3">
          <div class="col-md-4">
            <div class="info-item">
              <label>Bill No:</label>
              <span class="value">1301</span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info-item">
              <label>For:</label>
              <span class="value"><%= monthName %>, <%= year %></span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info-item">
              <label>Date:</label>
              <span class="value"><%= date %></span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-item">
              <label>Name:</label>
              <span class="value"><%= resident.firstName %> <%= resident.lastName %></span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-item">
              <label>Flat:</label>
              <span class="value"><%= resident.flatNumber %></span>
            </div>
          </div>
        </div>
      </div>
      <!-- Bill Table -->
      <div class="table-responsive">
        <table class="table table-dark table-hover modern-table">
          <thead class="table-primary">
            <tr>
              <th>Sr. No.</th>
              <th>Particulars</th>
              <th class="text-end">Amount (₹)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Society Charges</td>
              <td class="text-end"><%= society.maintenanceBill.societyCharges %></td>
            </tr>
            <tr>
              <td>2</td>
              <td>Repairs and Maintenance</td>
              <td class="text-end"><%= society.maintenanceBill.repairsAndMaintenance %></td>
            </tr>
            <tr>
              <td>3</td>
              <td>Sinking Fund</td>
              <td class="text-end"><%= society.maintenanceBill.sinkingFund %></td>
            </tr>
            <tr>
              <td>4</td>
              <td>Water Charges</td>
              <td class="text-end"><%= society.maintenanceBill.waterCharges %></td>
            </tr>
            <tr>
              <td>5</td>
              <td>Insurance Charges</td>
              <td class="text-end"><%= society.maintenanceBill.insuranceCharges %></td>
            </tr>
            <tr>
              <td>6</td>
              <td>Parking Charges</td>
              <td class="text-end"><%= society.maintenanceBill.parkingCharges %></td>
            </tr>
            <tr>
              <td>7</td>
              <td>Area-based Charges (<%= resident.squareFeet %> sq ft × ₹<%= society.maintenanceBill.squareFeetRate %>)</td>
              <td class="text-end"><%= (resident.squareFeet * society.maintenanceBill.squareFeetRate).toFixed(2) %></td>
            </tr>
            <tr>
              <td>8</td>
              <td>Credit Balance</td>
              <td class="text-end text-success">- <%= creditBalance %></td>
            </tr>
            <tr>
              <td>9</td>
              <td>Pending Due</td>
              <td class="text-end text-warning"><%= pendingDue %></td>
            </tr>
          </tbody>
          <tfoot class="table-info">
            <tr>
              <td></td>
              <td><strong>Total Amount Due</strong></td>
              <td class="text-end"><strong>₹<%= totalAmount %></strong></td>
